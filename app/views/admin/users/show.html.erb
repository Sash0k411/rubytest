<% if notice.present? %>
  <p id="notice"><%= notice %></p>
<% end %>

<div class="card">
    <h4 class="card-header">User:</h4>
    <div class="card-body">
      <p>
        <strong>Name:</strong>
        <%= @user.name %>
      </p>
      <p>
        <strong>ID:</strong>
        <%= @user.id %>
      </p>
      <p>
        <strong>Admin?:</strong>
        <%= @user.admin %>
      </p>
  </div>
</div>

<%= link_to 'Edit', edit_admin_user_path(@user) %> |
