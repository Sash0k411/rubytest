<% if notice.present? %>
  <p id="notice"><%= notice %></p>
<% end %>
<h1>Users</h1>

<table class = "table table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3">Update Users</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= link_to 'Edit', edit_admin_user_path(user), class: "btn btn-outline-primary"  %></td>
        <td><%= link_to 'Destroy', admin_user_path(user), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger"%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_admin_user_path, class: "btn btn-outline-secondary" %>
