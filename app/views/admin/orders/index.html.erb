<% if notice.present? %>
  <p id="notice"><%= notice %></p>
<% end %>

<h1>Orders</h1>

<table class = "table table-bordered">
  <thead class = "thead-light">
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Address</th>
      <th scope="col">Email</th>
      <th scope="col">Pay type</th>
      <th scope="col" colspan="3">Edit order</th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.name %></td>
        <td><%= order.address %></td>
        <td><%= order.email %></td>
        <td><%= order.pay_type %></td>
        <td><%= link_to 'Edit', edit_admin_order_path(order), class: "btn btn-outline-primary" %></td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?'}, class: "btn btn-outline-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
