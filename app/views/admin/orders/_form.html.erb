<%= form_with(model: @order, local: true, url: admin_order_path) do |form| %>

  <% if @order.errors.any? %>
    <div id="error_explanation">
      <p><%= t('errors.template.body') %></p>
      <ul>
        <% order.errors.full_messages.each do |message| %>
          <li><%=raw message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
<div class="mb-3 mt-3">

  <div class=" form-control mb-3 mt-3">
    <%= form.label :name, "Name:"%>
    <%= form.text_field :name, size: 40, class: "form-control" %>
  </div>

  <div class=" form-control mb-3 mt-3">
    <%= form.label :address, "Address:" %>
    <%= form.text_area :address, rows: 3, cols: 40, class: "form-control" %>
  </div>

  <div class=" form-control mb-3 mt-3">
    <%= form.label :email, 'Email:' %>
    <%= form.text_field :email, size: 40, class: "form-control" %>
  </div>

  <div id='pay-type-component mb-3 mt-3'></div>
</div>
  <div class="actions">
    <%= form.submit%>
  </div>
<% end %>