<%= form_with(model: product, local: true, url: admin_product_path) do |form| %>

  <div class="mb-3 mt-3">

    <div class=" form-control mb-3 mt-3">
      <%= form.label :title %>
      <%= form.text_field :title, class: "form-control" %>
    </div>

    <div class=" form-control mb-3 mt-3">
      <%= form.label :description%>
      <%= form.text_area :description, class: "form-control" %>
    </div>

    <div class="form-control mb-3 mt-3">
      <%= form.label :image_url %>
      <%= form.text_field :image_url, class: "form-control" %>
    </div>

    <div class=" form-control mb-3 mt-3">
      <%= form.label :price %>
      <%= form.text_field :price, class: "form-control" %>
    </div>

    <div class=" form-control mb-3 mt-3">
      <%= form.label :discount %>
      <%= form.text_field :discount, class: "form-control" %>
    </div>

    <div class="form-control mb-3 mt-3">
      <%= form.label :category_id %>
      <%= form.collection_select :category_id, Category.all, :name ,:name  %>

    </div>


    <div class="actions">
      <%= form.submit %>
    </div>
  </div>
<% end %>
