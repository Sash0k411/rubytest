<head>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>
<% if notice %>
  <aside id="notice"><%= notice %></aside>
<% end %>

<h1><%= t('.title_html') %></h1>

<ul class="catalog">
  <% cache @products do %>
    <% @products.each do |product| %>
      <% cache product do %>
        <div class="container card mx-3 px-3 m-3" style="width: 20rem;">
          <li class="list-group list-group-flush ">
            <%= image_tag(product.image_url, size: "150") %>
            <h2><%= product.title %></h2>
            <p class="list-group-item">
              <%= sanitize(product.description) %>
            </p>
            <p class="list-group-item">
              <%= product.category.name %>
            </p >
            <div class="price list-group-item">
             <%= number_to_currency(product.price_with_discount) %>
            </div>
            <div class="card-footer">
              <%= button_to t('.add_html'), line_items_path(product_id: product, locale: I18n.locale),
                            remote: true %>
            </div>
          </li>
        </div>
        <% end %>
      <% end %>
    <% end %>
</ul>
