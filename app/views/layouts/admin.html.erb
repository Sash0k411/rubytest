<!DOCTYPE html>
<html>
  <head>
    <title> NEW Depot</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  </head>
  <header class="main">
    <div>
      <%= image_tag 'logo.svg', alt: 'The Pragmatic Bookshelf'%>
    </div>
  </header>
  <body>
    <section class="content">
      <nav class="nav">
        <div class="col-sm-1">

            <a href ="/" class="btn btn-link">Home</a>
            <a href = "/admin/orders" class="btn btn-link">Orders</a>
            <a href = "/admin/products" class="btn btn-link">Products</a>
            <a href = "/admin/users" class="btn btn-link">Users</a>
            <a href = "/admin/categories" class="btn btn-link">Categories</a>
            <a href = "/admin/stats" class="btn btn-link">Stats</a>
            <td><%= button_to 'Logout', logout_path, method: :delete, class: "btn btn-link"%></td>

        </div>
      </nav>
      <div class="col">
        <main class='<%= controller.controller_name %>'>
          <%= yield %>
        </main>
      </div>
    </section>
  </body>
</html>
