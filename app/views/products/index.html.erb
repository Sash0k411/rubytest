<% if notice.present? %>
  <aside id="notice"><%= notice %></aside>
<% end %>

<h1>Products</h1>
<table class = "table table-bordered">
  <tfoot>
    <tr>
      <td colspan="3">
        <%= link_to 'New Product', new_product_path %>
      </td>
    </tr>
  </tfoot>
  <tbody>
    <% @products.each do |product| %>
    <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">
      <td class="image">
        <%= image_tag(product.image_url, class: 'list_image') %>
      </td>
      <td class="description">
        <h1><%= product.title %></h1>
        <p>
          <%= truncate(strip_tags(product.description), length: 80) %>
        </p>
        <p>
          <%= product.category.name %>
        </p>
      </td>
      <td class="actions">
        <ul>
          <div class = "btn btn-success"><li><%= link_to 'Show', product %></li></div>
          <div class = "btn btn-success"><li><%= link_to 'Edit', edit_product_path(product) %></li></div>
          <div class = "btn btn-danger"><li>
            <%= link_to 'Destroy',
                         product,
                         method: :delete,
                         data: { confirm: 'Are you sure?' } %>
          </li></div>
        </ul>
      </td>
    </tr>
   <% end %>
 </tbody>
</table>
