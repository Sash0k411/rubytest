
<%= form_tag(search_path, method: "get") do %>
  <div class="input-group">
    <div class="form-outline m-3">
      <%= search_field_tag :search, params[:search], placeholder: "Enter ur request", class: "form-control" %>
      <div class="input-group-btn mt-3 ">
        <%= button_tag "Search", :class => 'btn btn-outline-secondary', :title => nil %>
      </div>
    </div>
  </div>
<% end %>