<div class="catalog">
  <div class="container">
    <div class="row">
      <% products.each do |product| %>
        <div class="container bg-light rounded" style="width: 20rem;">
          <li class="list-group list-group-flush ">
            <%= image_tag(product.product_image, size: "150") %>
            <h2><%= product.product_title %></h2>
            <p class="list-group-item">
              <%= sanitize(product.product_description) %>
            </p>
            <p class="list-group-item">
              <%= link_to product.product_category.name, product.product_category %>
            </p>
            <div class="price list-group-item">
              <%= number_to_currency(t(".price_html", price: product.product_price_with_discount,
                                       price_on_euro: product.price_on_euro ,
                                       price_on_rubles: product.price_on_rubles
                                     )) %>
            </div>
            <div class="card-footer">
              <%= button_to "Add to Cart", line_items_path(product_id: product.product_id),
                            class: 'btn btn-success active'%>

            </div>
          </li>
        </div>
      <% end %>
    </div>
  </div>
</div>